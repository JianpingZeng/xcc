#!/usr/bin/env python

import os
import sys

# Variables configured at build time.
xcc_source_root = "@XCC_SOURCE_DIR@"
xcc_obj_root = "@XCC_BINARY_DIR@"

# Make sure we can find the lit package.
sys.path.insert(0, os.path.join(xcc_source_root, 'java', 'utils', 'lit'))

# Set up some builtin parameters, so that by default the XCC test suite
# configuration file knows how to find the object tree.
builtin_parameters = {
    'build_mode' : "@BUILD_MODE@",
    'xcc_site_config' : os.path.join(xcc_obj_root, 'java', 'test', 'lit.site.cfg.in'),
}

if __name__=='__main__':
    import lit
    lit.main(builtin_parameters)
